<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_profile_image"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeColor="@color/teal_700"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/infoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/profileImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#f5d39d"
                android:gravity="center">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/bioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio:"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/registrationDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Регистрация:"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonFriendRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Покани за приятелство"
            android:layout_marginTop="16dp"
            app:icon="@drawable/ic_request"
            app:iconTint="@null"
            app:backgroundTint="#EBA03F"
            app:iconPadding="8dp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/infoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAllUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Всички потребители"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_friends"
            app:iconTint="@null"
            app:backgroundTint="#EBA03F"
            app:iconPadding="8dp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonFriendRequests"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактирай"
            app:iconTint="@null"
            app:icon="@drawable/ic_edit"
            app:backgroundTint="#EBA03F"
            android:layout_marginTop="8dp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonAllUsers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Приятели"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_friends"
            app:iconTint="@null"
            app:backgroundTint="#EBA03F"
            app:iconPadding="8dp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/editProfileButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Чатове"
            app:icon="@drawable/ic_chat"
            app:iconTint="@null"
            app:backgroundTint="#EBA03F"
            app:iconPadding="8dp"
            android:layout_marginTop="8dp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonFriends"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изход"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_logout"
            app:backgroundTint="#EBA03F"
            app:iconPadding="8dp"
            app:cornerRadius="16dp"
            app:iconTint="@null"
            app:layout_constraintTop_toBottomOf="@id/buttonChats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
