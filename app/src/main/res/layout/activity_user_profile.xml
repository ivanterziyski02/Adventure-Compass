<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_profile_image"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Профилна снимка -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeColor="@color/teal_700"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Карта с информация -->
        <androidx.cardview.widget.CardView
            android:id="@+id/infoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/profileImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#f5d39d"
                android:gravity="center">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/bioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio:"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/registrationDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Регистрация:"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textAlignment="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Динамични бутони -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изпрати покана"
            app:backgroundTint="#EBA03F"
            android:layout_marginTop="16dp"
            app:cornerRadius="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/infoCard"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRequestSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поканата е изпратена"
            app:backgroundTint="#EBA03F"
            android:enabled="false"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonSendRequest"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/buttonRequestActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/buttonRequestSent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/buttonAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Приеми"
                app:backgroundTint="#EBA03F"/>

            <Button
                android:id="@+id/buttonDecline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Откажи"
                android:layout_marginStart="8dp"
                app:backgroundTint="#EBA03F"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friendActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/buttonRequestActions"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/buttonMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Изпрати съобщение"
                app:backgroundTint="#EBA03F"/>

            <Button
                android:id="@+id/buttonBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Блокирай"
                android:layout_marginStart="8dp"
                app:backgroundTint="#EBA03F"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blockActionsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/friendActions"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/buttonUnblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Разблокирай"
                app:backgroundTint="#EBA03F"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
